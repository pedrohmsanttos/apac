<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			statuses="0,1"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field 
			name="enviado"
			type="list"
			label="Enviado"
			onchange="this.form.submit();"
			>
			<option value="">- Enviado -</option>
			<option value="s">Sim</option>
			<option value="n">Não</option>
		</field>

		<field
			name="tipo"
			type="category"
			extension="com_avisohidrologico"
			label="Tipo do Avisohidrologico:"
			description=""
			onchange="this.form.submit();"
			>
			<option value="">- Selecione o tipo -</option>
		</field>

		<field
			name="tags"
			type="tag"
			label="JTAG"
			description="Selecione TAGS"
			multiple="true"
			onchange="this.form.submit();"
			/>

		<field
			    name="regioes"
			    type="sql"
			    default="0"
			    label="Região:"
				multiple="true"
			    query="SELECT id,title FROM #__regioes"
			    key_field="id"
			    value_field="title"
				description="Selecione Regiões"
				onchange="this.form.submit();"
			    >
		</field>


		<field
			name="autor"
			type="sql"
			default="0"
			label="Autor:"
			query="SELECT id,name FROM #__users"
			key_field="id"
			value_field="name"
			description="Selecione o usuário"
			onchange="this.form.submit();"
			>
			<option value="">- Selecione o autor -</option>
		</field>

		<!-- Keep "_dateformat" suffix for date validation on form submit -->
		<field 
			name="dta_ini" 
			type="calendar" 
			format="%d-%m-%Y %H:%M:%S" 
			label="Data inicial" 
			/>

		<!-- Keep "_dateformat" suffix for date validation on form submit -->
		<field 
			name="dta_end" 
			type="calendar" 
			format="%d-%m-%Y %H:%M:%S" 
			label="Data final" 
			/>

		
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_HELLOWORLD_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>