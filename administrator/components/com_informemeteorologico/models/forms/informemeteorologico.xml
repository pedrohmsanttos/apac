<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    
    
    <field
				class="btn-group btn-group-yesno"
				name="state"
				type="radio"
				default="0"
				label="Publicado:"
				description="">

				<option value="0">Não</option>
				<option value="1">Sim</option>
		</field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_CREATED_BY" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_CREATED_BY" hidden="true" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_MODIFIED_BY" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_MODIFIED_BY" hidden="true" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_MODIFIED_BY"/>
    <field name="titulo" required="true" filter="safehtml" type="text" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_TITULO" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_TITULO" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_TITULO"/>
    <field name="tipo" required="true" extension="com_informemeteorologico" type="category" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_TIPO" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_TIPO" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_TIPO"/>
    <field name="observacao" filter="safehtml" type="textarea" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_OBSERVACAO" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_OBSERVACAO" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_OBSERVACAO"/>
    <field name="tags" multiple="true" filter="safehtml" type="tag" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_TAGS" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_TAGS" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_TAGS"/>
    <field name="arquivo" type="FileMultiple" label="COM_informemeteorologico_FORM_LBL_informemeteorologico_ARQUIVO" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_ARQUIVO" hint="COM_informemeteorologico_FORM_LBL_informemeteorologico_ARQUIVO"/>
    <field name="publicacao" required="true" type="calendar"	format="%d-%m-%Y %H:%M:%S" showtime="true" filter="user_utc" label="Data de Publicação" description="COM_informemeteorologico_FORM_DESC_informemeteorologico_PUBLICACAO" />
    <field name="ordering" type="number" default="0" label="Ordem:" description="" min="1" step="1"	/>
  </fieldset>
</form>
