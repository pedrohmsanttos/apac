<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="published"
				type="hidden"
				default="1"
				/>
		<field
				name="nome_secretario"
				type="text"
				label="Nome do secretário"
				description=""
				size="40"
				class="inputbox"
				default=""
				/>

		<field  name="imagem" 
				label="Imagem"
				type="media"
				preview_width="310"
				preview_height="250"
				directory="secretarios" 
				/>

		<field 
		   name="endereco_secretario" 
		   label ="Endereço do secretário"
		   type="editor"
		   rows="10"
		   editor="TinyMCE"
		   buttons="true"
		   width="350"
		   height="10"
		   hide="image"
		   filter="safehtml"
		   class="inputbox"
		   description="" />

		<field 
		   name="sobre_secretario" 
		   label ="Sobre o secretário"
		   type="editor"
		   rows="10"
		   editor="TinyMCE"
		   buttons="true"
		   width="350"
		   height="10"
		   hide="image"
		   filter="safehtml"
		   class="inputbox"
		   description="" />

		<field 
		   name="atribuicoes_secretaria" 
		   label ="Atribuições da secretaria"
		   type="editor"
		   rows="10"
		   editor="TinyMCE"
		   buttons="true"
		   width="350"
		   height="10"
		   hide="image"
		   filter="safehtml"
		   class="inputbox"
		   description="" />

		<field
				name="link_sitesecretaria"
				type="text"
				label="Link do Website"
				description=""
				size="40"
				class="inputbox"
				default=""
				/>				
	</fieldset>
