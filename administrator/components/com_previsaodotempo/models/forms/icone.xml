<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field
      class="btn-group btn-group-yesno"
      name="state"
      type="radio"
      default="0"
      label="Publicado:"
      description="">

      <option value="0">Não</option>
      <option value="1">Sim</option>
		</field>

    <field 
      name="nome" 
      filter="safehtml" 
      type="text" 
      label="Nome:" 
      description="Informar o nome do Ícone"
      required="true"
    />
    
    <field 
      name="icone" 
      type="media" 
      label="Ícone" 
      description="Selecione uma imagem para o Ícone" 
      accept="image/*" 
      preview_width="200"
      preview_height="200"
      required="true"
    />
    
    <field 
      name="checked_out" 
      type="hidden" 
      filter="unset"
    />
    
    <field 
      name="checked_out_time" 
      default="0000-00-00 00:00:00" 
      type="hidden" 
      filter="unset"
    /> 

    <field 
      name="created_by" 
      type="createdby" 
      default="0" 
      label="COM_PREVISAODOTEMPO_FORM_LBL_PREVISAO_CREATED_BY" 
      description="COM_PREVISAODOTEMPO_FORM_DESC_PREVISAO_CREATED_BY" 
      hidden="true" 
      hint="COM_PREVISAODOTEMPO_FORM_LBL_PREVISAO_CREATED_BY"
    />
    
    <field 
      name="modified_by" 
      type="modifiedby" 
      default="0" 
      label="COM_PREVISAODOTEMPO_FORM_LBL_PREVISAO_MODIFIED_BY" 
      description="COM_PREVISAODOTEMPO_FORM_DESC_PREVISAO_MODIFIED_BY" 
      hidden="true" 
      hint="COM_PREVISAODOTEMPO_FORM_LBL_PREVISAO_MODIFIED_BY"
    />

    <field
				name="id"
				type="hidden"
				/>
 </fieldset>

</form>
