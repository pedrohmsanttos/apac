<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">
	<name>aviso</name>
	<creationDate>December 2017</creationDate>
	<author>Inhalt Soluções em Informática</author>
	<authorEmail>suporte@inhalt.com.br</authorEmail>
	<authorUrl>http://inhalt.com.br/</authorUrl>
	<copyright>Copyright 2017</copyright>
	<license></license>
	<version>0.1.0</version>
	<description>Componente de Avisos</description>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
			<file driver="postgresql" charset="utf8">sql/install.postgresql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			<file driver="postgresql" charset="utf8">sql/uninstall.postgresql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<filename>index.html</filename>
		<filename>aviso.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>
	<administration>
		<menu link='index.php?option=com_aviso'>Cadastro de Avisos</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>aviso.php</filename>
			<filename>aviso.xml</filename>
			<filename>controller.php</filename>
			<folder>sql</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>tables</folder>
			<folder>controllers</folder>
			<folder>language</folder>
		</files>
	</administration>
</extension>
