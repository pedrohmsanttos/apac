<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição da Lista com Notícias</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>4.0.0</version>
    <description>Módulo para exibição de notícias em lista.</description>
    <files>
        <filename>mod_listadenoticias.xml</filename>
        <filename module="mod_listadenoticias">mod_listadenoticias.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
    <fields name="params">
        <fieldset name="basic">
            <field name="categoria"
                   type="category"
                   extension="com_content"
                   label="Categoria:"
                   multiple="true"
                   description="" />
        </fieldset>
    </fields>
</config>
</extension>
