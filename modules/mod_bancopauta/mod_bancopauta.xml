<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição de Banco de pauta</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>1.0.0</version>
    <description>Módulo para da Listagem de banco de pautas.</description>
    <files>
        <filename>mod_bancopauta.xml</filename>
        <filename module="mod_bancopauta">mod_bancopauta.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">
                <field
                    name="catid"
                    type="category"
                    required="true"
                    extension="com_agenda"
                    label="Categoria"
                    description=""
                />
                <field name="descricao"
                   type="textarea"
                   label="Descrição da página"
                   description=""
                   rows="5"
                   size="65"
                   required="true"
                   filter="raw" />
            </fieldset>
        </fields>
    </config>
</extension>
