<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição de Secretarias</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>1.0.0</version>
    <description>Módulo para da Listagem de Secretarias.</description>
    <files>
        <filename>mod_secretaria.xml</filename>
        <filename module="mod_secretaria">mod_secretaria.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="descricao"
                       type="textarea"
                       label="Descricao da página"
                       description=""
                       rows="5"
                       required="true"
                       size="65"
                       filter="raw" />
            </fieldset>
        </fields>
    </config>
</extension>
