<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição de galeria</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>1.0.0</version>
    <description>Módulo para exibição de galeria do componente com_arquivo.</description>
    <files>
        <filename>mod_galeria.xml</filename>
        <filename module="mod_galeria">mod_galeria.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
        <fields name="params" >
            <fieldset name="basic" addfieldpath="/administrator/components/com_content/models/fields">

                <field
                    name="descricao_pagina"
                    type="textarea"
                    rows="5"
                    required="true"
                    label="Descrição da Página:"
                    filter="html"
                />

                <field
                     type="spacer"
                     name="myspacer1"
                     hr="true"
                />

                <field
                    name="titulo_1"
                    type="text"
                    required="true"
                    label="Título:"
                    filter="string"
                />

                <field
                      name="artigo_1"
                      type="modal_article"
                      required="true"
                      default=""
                      label="Artigo Veja Mais:"
                      description=""
                />

                <field
                    name="blocos_1"
                    type="text"
                    required="true"
                    label="Quantidade de blocos:"
                    filter="int"
                />

                <field
                    name="categoria_1"
                    type="category"
                    required="true"
                    extension="com_arquivo"
                    label="Categoria 1:"
                    description=""
                />


                <field required="true" name="exibir_1" type="radio" class="btn-group btn-group-yesno" default="0" label="Exibir 1:" description="">
                  <option value="0">Não</option>
                  <option value="1">Sim</option>
                </field>

                <field
                     type="spacer"
                     name="myspacer2"
                     hr="true"
                />

                <field
                    name="titulo_2"
                    type="text"
                    label="Título:"
                    filter="string"
                />

                <field
                      name="artigo_2"
                      type="modal_article"
                      default=""
                      label="Artigo Veja Mais:"
                      description=""
                />

                <field
                    name="blocos_2"
                    type="text"
                    label="Quantidade de blocos:"
                    filter="int"
                />

                <field
                    name="categoria_2"
                    type="category"
                    extension="com_arquivo"
                    label="Categoria 2:"
                    description=""
                />

                <field name="exibir_2" type="radio" class="btn-group btn-group-yesno" default="0" label="Exibir 2:" description="">
                  <option value="0">Não</option>
                  <option value="1">Sim</option>
                </field>

                  <field
                     type="spacer"
                     name="myspacer3"
                     hr="true"
                />

                <field
                    name="titulo_3"
                    type="text"
                    label="Título:"
                    filter="string"
                />

                <field
                      name="artigo_3"
                      type="modal_article"
                      default=""
                      label="Artigo Veja Mais:"
                      description=""
                />

                <field
                    name="blocos_3"
                    type="text"
                    label="Quantidade de blocos:"
                    filter="int"
                />

                <field
                    name="categoria_3"
                    type="category"
                    extension="com_arquivo"
                    label="Categoria 3:"
                    description=""
                />

                <field name="exibir_3" type="radio" class="btn-group btn-group-yesno" default="0" label="Exibir 3:" description="">
                  <option value="0">Não</option>
                  <option value="1">Sim</option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>
