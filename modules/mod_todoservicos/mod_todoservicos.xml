<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição da Listagem Completa Serviços</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>1.0.0</version>
    <description>Módulo para exibição da página interna com a lista de serviços cadastrados no componente de serviços.</description>
    <files>
        <filename>mod_todoservicos.xml</filename>
        <filename module="mod_todoservicos">mod_todoservicos.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
    <fields name="params">
        <fieldset name="basic">
            <field name="title_section"
                   type="textarea"
                   label="Título do Módulo:"
                   description=""
                   rows="5"
                   size="65"
                   filter="raw" />
        </fieldset>
    </fields>
</config>
</extension>
