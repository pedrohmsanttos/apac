<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Exibição de Contato</name>
    <author>Inhalt Soluções Em Informática</author>
    <version>1.0.0</version>
    <description>Módulo para exibição de contato.</description>
    <files>
        <filename>mod_contato.xml</filename>
        <filename module="mod_contato">mod_contato.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
					name="header_msg1"
					type="textarea"
					label="Texto cabeçalho 1:"
					description="texto cabeçalho 1"
					filter="safehtml"
					rows="3"
					cols="40"
				/>

                <field
					name="header_msg2"
					type="textarea"
					label="Texto cabeçalho fale conosco:"
					description="texto cabeçalho fale conosco"
					filter="safehtml"
					rows="3"
					cols="40"
				/>

                <field
					name="header_msg3"
					type="textarea"
					label="Titulo da página:"
					description="Titulo da página"
					filter="safehtml"
					rows="3"
					cols="40"
				/>

            </fieldset>
        </fields>
    </config>
</extension>
